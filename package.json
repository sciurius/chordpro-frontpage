{
  "title": "ChordPro Frontpage",
  "name": "chordpro-frontpage",
  "description": "ChordPro is a simple text format for the notation of lyrics with chords.",
  "version": "1.0.0",
  "author": "George Lewe",
  "homepage": "https://www.lewe.com",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/glewe/chordpro-frontpage.git"
  },
  "license": "MIT",
  "scripts": {
    "assets": "node src/config/assets.config.mjs",
    "build": "npm-run-all js css html img assets",
    "css-compile": "sass --style expanded --source-map --embed-sources --no-error-css --load-path=node_modules src/scss/bootstrap-custom.scss:dist/css/bootstrap-custom.css src/scss/bsc-tooltips.scss:dist/css/bsc-tooltips.css",
    "css-copy": "node src/config/css.config.mjs",
    "css-lint": "stylelint src/scss/",
    "css-minify": "cleancss -O1 --format breakWith=lf --with-rebase --source-map --source-map-inline-sources --output dist/css/ --batch --batch-suffix \".min\" \"dist/css/*.css\" \"!dist/css/*.min.css\" \"!dist/css/*rtl*.css\"",
    "css-prefix": "postcss --use autoprefixer --map --replace \"dist/css/*.css\" \"!dist/css/*.rtl*.css\" \"!dist/css/*.min.css\"",
    "css-timestamp": "node src/config/scss.config.mjs",
    "css": "npm-run-all css-timestamp css-compile css-prefix css-minify css-copy",
    "html": "npm-run-all html-build html-beautify",
    "html-beautify": "js-beautify --config .jsbeautifyrc.json --file \"dist/**/*.html\"",
    "html-build": "ejs-cli --base-dir src/html/ \"index.html\" -o dist/",
    "html-copy": "node src/config/html.config.mjs",
    "img": "node src/config/img.config.mjs",
    "js": "npm-run-all js-compile js-lint js-minify",
    "js-compile": "rollup --config src/config/rollup.config.cjs --sourcemap --context window",
    "js-lint": "eslint --cache --cache-location .cache/.eslintcache --report-unused-disable-directives .",
    "js-minify": "terser --compress passes=2 --mangle --comments \"/^!/\" --source-map \"content=dist/js/chordpro-frontpage.js.map,includeSources,url=chordpro-frontpage.min.js.map\" --output dist/js/chordpro-frontpage.min.js dist/js/chordpro-frontpage.js",
    "server": "sirv dist/ --dev --no-clear --port 3000",
    "server-http": "http-server --port 3000 -o",
    "start": "npm-run-all --parallel watch server",
    "watch": "nodemon --watch src -e html,ejs,scss -x \"npm run build\" --ignore src/scss/_timestamp.scss",
    "test": "npm-run-all css-lint css"
  },
  "dependencies": {
    "@popperjs/core": "^2.11.8",
    "bootstrap": "^5.3.2",
    "bootstrap-icons": "^1.11.1",
    "ejs": "^3.1.9",
    "ejs-cli": "^2.2.3",
    "http-server": "^14.1.1"
  },
  "devDependencies": {
    "@rollup/plugin-typescript": "^11.1.5",
    "@typescript-eslint/eslint-plugin": "^6.7.5",
    "@typescript-eslint/parser": "^6.7.5",
    "autoprefixer": "^10.4.14",
    "clean-css-cli": "^5.6.2",
    "console-stamp": "3.1.2",
    "eslint": "^8.53.0",
    "eslint-config-xo": "^0.43.1",
    "eslint-config-xo-typescript": "^1.0.1",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-unicorn": "^49.0.0",
    "js-beautify": "^1.14.11",
    "nodemon": "^3.0.1",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.31",
    "postcss-cli": "^10.1.0",
    "rollup": "^3.29.4",
    "sass": "^1.64.1",
    "sirv-cli": "^2.0.2",
    "stylelint": "^15.10.2",
    "stylelint-config-twbs-bootstrap": "^11.0.1",
    "terser": "^5.24.0"
  }
}
